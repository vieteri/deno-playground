<%- include('./partials/header.ejs') %>

<div class="container">	
	<div class="row">
	<h2><strong>Insert an evening mood </strong><br/></h2><br/>
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<!-- Start form -->
    <form method="POST">
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" name="date"  placeholder="date" value="<%= date %>"/>
      </div>

      <div class="form-group">
        <label for="sports">Sports</label>
        <input type="number" class="form-control" name="sports" step='any' placeholder="sports 1-5" value="<%= sports %>"/>
      </div>
 
      <div class="form-group">
        <label for="study">study</label>
        <input type="number" class="form-control" name="study" step='any' placeholder="study 1-5" value="<%= study %>"/>
      </div>
 
      <div class="form-group">
        <label for="eatquality">study</label>
        <input type="number" class="form-control" name="eatquality" step='any' placeholder="eatquality 1-5" value="<%= eatquality %>"/>
      </div>
 
      <div class="form-group">
        <label for="mood">mood</label>
        <input type="number" class="form-control" name="mood" step='any' placeholder="mood 1-5" value="<%= mood %>"/>
      </div>



      <div class="form-check">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
        
        
     </div>
    </form>


			<!-- End form -->
		</div>
		
	
		
	</div>


<p><%= message %></p>
<% if (errors && errors.length > 0) { %>
  <ul>
    <% errors.forEach((error) => { %>
      <li><%= error %></li>
    <% }); %>
  </ul>
<% } %>
<%- include('./partials/footer.ejs') %>